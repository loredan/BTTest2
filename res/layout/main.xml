<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
        >
    <ScrollView
            android:layout_width="216dp"
            android:layout_height="246dp"
            android:id="@+id/scrollView"
            android:layout_centerHorizontal="true"
            android:layout_alignParentLeft="true" android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true" android:layout_alignParentTop="true">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" android:gravity="left" android:id="@+id/ll_devices">
        </LinearLayout>
    </ScrollView>
    <ListView
            android:layout_width="wrap_content"
            android:layout_height="218dp"
            android:id="@+id/lv_devices" android:layout_alignBottom="@+id/scrollView"
            android:layout_alignTop="@+id/scrollView"/>
</RelativeLayout>

